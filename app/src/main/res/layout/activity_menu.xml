<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:padding="20dp"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mapa"
                    android:layout_width="240dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                   >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Api rest"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/mapa">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ingredientes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imageViewpython"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/python"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="105dp"
                                android:text="Ingredientes"
                                android:textColor="@color/colorWhite"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/productos"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imageViewnodejs"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/nodejs"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="105dp"
                                android:text="Productos"
                                android:textColor="@color/colorWhite"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/reportes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imageViewspring"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/spring"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="105dp"
                                android:text="Reportes"
                                android:textColor="@color/colorWhite"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                               />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/usuario"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imageViewphp"

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/phplogo"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="105dp"
                                android:text="Usuario"
                                android:textColor="@color/colorWhite"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>



